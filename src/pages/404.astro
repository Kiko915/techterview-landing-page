---
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';
import '../styles/global.css';
import logo from '../assets/logo/techterview_wordmark_colored.webp';
import ShimmerButton from '../components/ui/ShimmerButton.vue';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>404 - Page Not Found | TechTerview</title>
	</head>
	<body class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50/80 to-indigo-50/90 relative overflow-hidden">
		<main class="min-h-screen flex items-center justify-center px-6 py-12 relative">
			<div class="text-center max-w-3xl mx-auto">
				<!-- Logo with Glassmorphism -->
				<div class="mb-12 flex justify-center">
					
						<img src={logo.src} alt="TechTerview" class="h-10 w-auto" />
				
				</div>
			
				<!-- Main Message with Modern Typography -->
				<div class="mb-8 space-y-4">
					<h2 class="text-3xl md:text-5xl font-bold text-gray-900 leading-tight">
						Oops! Page not found
					</h2>
					<p class="text-lg md:text-xl text-gray-600/80 max-w-2xl mx-auto leading-relaxed">
						The page you're looking for seems to have vanished into the digital void. Don't worry, it happens to the best of us.
					</p>
				</div>
				
				<!-- Modern Action Buttons -->
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
					<ShimmerButton client:load class="text-base w-full" goBack>
						Go back
					</ShimmerButton>
				</div>
				
			</div>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}
</style>


